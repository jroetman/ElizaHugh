<p id="notice"><%= notice %></p>

<div class="col-sm-8">
	<div class="panel panel-default">
	  <div class="panel-heading">
        <h3 class="panel-title">Your cart</h3>
      </div>
	  <div class="panel-body cart">
		   <table class="table">
		    <tbody>
			<% @cartitems.each_with_index do |item, idx| %>
			  <tr>
			    <td><%= image_tag item.product.image.url(:small) %></td>
			    <td><p class="whitespace"><%= item.product.description %></p></td>
			    <td>$<%=  sprintf("%.2f", (item.product.price)) %></td>
			    <td><%= link_to "Remove Item", {action: 'delete', id: item.id}, class: "btn btn-xs btn-default" %> </td>
			  </tr>
			<% end %>
			</tbody>
		  </table>
	  </div>
	  <div class="panel-footer">
	    
	  </div>
	</div>
</div>
<div class="col-sm-4">
	<div class="panel panel-default">
	  <div class="panel-heading">
        <h3 class="panel-title">Order Summary</h3>
      </div>
	  <div class="panel-body cartSummary">
	    <ul>
			<li>CART TOTAL     <span class="pull-right"><%= sprintf("%.2f", current_user.cart_total) %></span></li>
			<li>SHIPPING       <span class="pull-right"><%= sprintf("%.2f", getShipping) %></span> </li>
			<li>ESTIMATED TAX  <span class="pull-right"><%= sprintf("%.2f", (getTax * current_user.cart_total)) %></span></li>
			<li class='total'>TOTAL <span class="pull-right"><%= sprintf("%.2f", (current_user.cart_total + (getTax * current_user.cart_total) + getShipping)) %> </span></li>
	    </ul>
	    
	  </div>
	  <div class="panel-footer">
	    <div class='checkoutFoot'>
                        Comming Soon! (You can try, but it's only hooked up for testing)
			<%= form_tag({controller: "cartitems", action: "charge"}) do %>
			  <script
			    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			    data-key="pk_test_VfHP98Jj6JcxsM3JGHjvYrne"
			    data-amount="<%= current_user.cart_total * 100 %>"
			    data-name="Eliza Hugh"
			    data-description="Purchase of <%= current_user.cartitems.size %> items."
			    data-image="/128x128.png">
			  </script>
			<% end %>	
			<% flash.each do |name, msg| -%>
     		 <%= content_tag :div, msg, class: name %>
   		   <% end -%>       
	    </div>
	  </div>
	</div>
</div>

