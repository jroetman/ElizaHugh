	<%= form_for(@product,  url: {controller: "products", action: "createRemote"}, html: {:multipart => true }) do |form| %>
	 <p>
	  <%= form.label :title %><br/>
	  <%= form.text_field :title %>
	  </p>
	  <p>
	  <%= form.label :description %> <br/>
	  <%= form.text_area :description %>
	  </p>
	  <p>
	  <%= form.label :category %> <br/>
	  <%= select("product", "category", Category.all.collect {|p| [ p.name, p.id ] }) %>
	  </p>
	  <p>
	  <%= form.label :price %> <br/>
	  <%= form.text_field :price %>
	  </p>
	  <p>
	  <%= form.label "Select Image"	 %> <br/>
	  <%= form.file_field :image %>
	  </p>
	  <%= form.submit %>
<% end %>
<% if flash[:error] %>
    <div class="notice"><%= flash[:error] %></div>
<% end %>