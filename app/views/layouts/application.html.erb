  <body>
    <div class="main container">
      <div class="row head ">   
      </div>
      <div class="row">   
	<nav class="headnav navbar navbar-default" role="navigation">
	<ul class="nav navbar-nav">
	  <li><a href="#">Clothes</a></li>
	  <li><a href="#">Accessories</a></li>
	  <li><a href="#">Household</a></li>
