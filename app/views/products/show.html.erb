<div class="row">
	  <div class="col-md-6">
	    <%= image_tag @product.image.url(:large), :size => "450x350"%>
	  </div>
	  <div class="col-md-5">
	    <h3><%= @product.title %></h3>
	    <p class="whitespace"><%= @product.description %></p> 
	    <p class="price">$<%=  sprintf("%.2f", (@product.price)) %></p> 
	    <p class="longDescription"><%= @product.long_description %> </p>
	    <% if current_user %>
		    <% if !itemInCart(@product.id)  %>
		        <%= link_to "Add to Cart", add_to_cart_product_path, method: :post, prodId: @product.id, class: "btn btn-sm btn-info" %>
		    <% else %>
		       <a href="/cart"><span class="btn btn-default glyphicon glyphicon-shopping-cart"> </span></a> In Cart
		    <% end %>
	    <% end %>
	    <%= link_to "Back to Previous Page", :back, :class => "pull-right btn btn-link btn-md" %>
      </div>
     
</div>