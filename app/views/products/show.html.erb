<div class="row">
	  <div class="col-sm-6">
	    <div class='image'>
	      <%= image_tag @product.image.url(:large) %>
	    </div>
	  </div>
	  <div class="col-sm-6">
	    <h3><%= @product.title %></h3>
	    <p class="whitespace"><%= @product.description %></p> 
	    <p class="price">$<%=  sprintf("%.2f", (@product.price)) %></p> 
	    <p class="longDescription"><%= @product.long_description %> </p>
	    <p><%= itemInQueue(@product.id).html_safe %> </p>
	    <p> <%= link_to "Back to Previous Page", :back, :class => "btn btn-link btn-md" %> </p>
      </div>
     
</div>