
    <div class="container text-center">
	<div class="row">
	  <div class="col-xs-4" ng-controller="SpecialsCtrl">
	    <div class="row logo">
	    
	    </div>

         <% @specials.each do |product| %>
	    <div class="specials row">
	      <div class="col-xs-9 col-xs-offset-1">
		    <div class="alert" <%= product.getStyle %>>
		      <h4><%= product.title %></h4>
		      <p> <%= product.description %></p>
		    </div>
	      </div>
	    </div>
		<% end %>

	  </div>

	  <div class="col-xs-8">
	    <div id="myCarousel" class="carousel slide">
	      <ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
		<li data-target="#myCarousel" data-slide-to="3"></li>
	      </ol>
	      <!-- Carousel items -->
	      <div class="carousel-inner">
	     	<div class="active item"><%= image_tag("bag.jpg", size:"750x500", class:"img-rounded") %></div>
		    <div class="item"><%= image_tag("sweater1.jpg", size:"750x500", class:"img-rounded") %></div>
		    <div class="item"><%= image_tag("rug1.jpg", size:"750x500", class:"img-rounded") %></div>
		    <div class="item"><%= image_tag("clothtowels.jpg", size:"750x500", class:"img-rounded") %></div>
	      </div>
	      <!-- Carousel nav -->
	      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
	      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	    </div>
	  </div>
	</div>
      </div>
